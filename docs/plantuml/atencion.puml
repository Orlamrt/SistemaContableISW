@startuml
title Módulo: Atención y Coordinación

rectangle "Front-End (UI)" {
  [Calendario]
  [Agendar Reunión]
}

rectangle "Back-End (API)" {
  [MeetingsController]
  [ConflictChecker]
}

note right of [MeetingsController]
  Roles: ADMIN, AUDITOR, CLIENTE y SOPORTE pueden gestionar reuniones.
end note

database "Base de Datos" {
  [meetings]
  [users]
}

[Calendario] --> [MeetingsController] : GET /meetings
[Agendar Reunión] --> [MeetingsController] : POST /meetings
[MeetingsController] --> [ConflictChecker]
[MeetingsController] --> [meetings]
[meetings] --> [users]

@enduml
